pipeline {
    agent any
    stages {
        stage('Verify Shell Environment') {
            steps {
                script {
                    def jobName = env.JOB_NAME
                    def buildNumber = env.BUILD_NUMBER

                    echo "Job Name: $jobName"
                    echo "Build Number: $buildNumber"

                    sh 'sudo docker --version'
                    sh 'sudo dotnet --info'
                }
            }
        }

        stage('Checkout Jenkins Pipeline Git Repository') {
            steps {
                script {
                    def gitRepoUrl = 'https://github.com/Piyushshrii/jenkins-pipeline.git'

                    checkout([$class: 'GitSCM', 
                        branches: [[name: '*/main']], 
                        userRemoteConfigs: [[url: gitRepoUrl]], 
                        extensions: [[$class: 'CleanBeforeCheckout'], [$class: 'CloneOption', noTags: false, shallow: true, depth: 1]]
                    ])
                }
            }
        }

        stage('Build Application') {
            steps {
                sh 'chmod +x ci/01-build.sh && ci/01-build.sh'
            }
        }

        stage('Unit Test') {
            steps {
                script {
                    sh 'chmod +x ci/03-unit-test.sh && ci/03-unit-test.sh'
                    mstest testResultsFile: "**/src/Pi.Math.Tests/TestResults/Pi.Math.trx"
                    mstest testResultsFile: "**/src/Pi.Runtime.Tests/TestResults/Pi.Runtime.trx"
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    def jobName = env.JOB_NAME
                    def buildNumber = env.BUILD_NUMBER

                    echo "Job Name: $jobName"
                    echo "Build Number: $buildNumber"
                
                    withCredentials([usernamePassword(credentialsId: 'c9b3d4dd-7e19-4bf4-bfcb-db82f78430f9', usernameVariable: 'DOCKER_HUB_USER', passwordVariable: 'DOCKER_HUB_PASSWORD')]) {
                        sh "chmod +x ci/04-push.sh"
                        sh "ci/04-push.sh $buildNumber"
                    }
                    
                    echo "Build Completed - Job Name: $jobName  --  Build Number: $buildNumber"
                }
            }
        }
    }
}
